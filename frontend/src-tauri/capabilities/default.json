{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "capability for main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "store:default",
    "fs:default",
    "fs:read-all",
    "fs:allow-write",
    "fs:allow-exists",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/**" }
      ]
    }
  ]
}
